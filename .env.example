# MarketPulse-Pro Environment Configuration
# Rename this file to .env and adjust values for your environment
# NEVER commit .env to version control

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=MarketPulse-Pro
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_ROTATION=1 week
LOG_RETENTION=1 month

# =============================================================================
# Target Website Configuration
# =============================================================================
BASE_URL=https://books.toscrape.com/

# =============================================================================
# Resilience Parameters
# =============================================================================
# Maximum concurrent async requests (semaphore limit)
MAX_CONCURRENT_REQUESTS=5

# Network request timeout in milliseconds
REQUEST_TIMEOUT_MS=30000

# Retry configuration for exponential backoff
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY_SEC=1.0
RETRY_MAX_DELAY_SEC=60.0

# =============================================================================
# Watchdog Configuration
# =============================================================================
# Null/failure ratio threshold (0.30 = 30%)
# If exceeded, scraper halts to prevent data pollution
WATCHDOG_FAILURE_THRESHOLD=0.30

# =============================================================================
# Pagination
# =============================================================================
# Maximum pages to traverse (0 = unlimited)
PAGINATION_LIMIT=0

# =============================================================================
# State Persistence
# =============================================================================
# Browser session state file path
STORAGE_STATE_PATH=storage_state.json

# =============================================================================
# Output Configuration
# =============================================================================
OUTPUT_DIR=output

# =============================================================================
# CSS Selectors (Target: books.toscrape.com)
# Modify these when targeting different websites
# =============================================================================
CSS_SELECTOR_TITLE=h3 > a
CSS_SELECTOR_PRICE=.price_color
CSS_SELECTOR_STOCK=.instock.availability
CSS_SELECTOR_RATING=.star-rating
CSS_SELECTOR_NEXT_PAGE=.next > a
CSS_SELECTOR_PRODUCT_CONTAINER=article.product_pod
